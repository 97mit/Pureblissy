<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">@drawable/splash_drawable</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="postSplashScreenTheme">@style/Theme.Pureblissy</item>
    </style>
    <style name="Theme.App.Starting.NoActionBar" parent="Theme.Pureblissy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">@drawable/splash_drawable</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>